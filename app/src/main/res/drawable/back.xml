<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp"

        >
        <shape
            android:shape="rectangle" >

            <!-- View background color -->
            <solid
                android:color="@color/quantum_white_100" >
            </solid>

            <!-- View border color and width -->
            <stroke
                android:width="2dp"
                android:color="@color/com_facebook_blue" >
            </stroke>

            <!-- The radius makes the corners rounded -->
            <corners
                android:radius="10dp"   >
            </corners>
            <padding android:bottom="4dp"
                android:left="6dp"
                android:right="6dp"
                android:top="4dp">

            </padding>
        </shape>
    </item>

</layer-list>
