<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="finki.ukim.mpip.gladensum.AddAccDetailsActivity">

    <EditText
        android:id="@+id/adresa_restoran_tb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:hint="ime_ulica broj"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ime_restoran_tb" />

    <EditText
        android:id="@+id/telefon_restoran_tb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:hint="+07x/xxx-xxx"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adresa_restoran_tb" />

    <EditText
        android:id="@+id/ime_restoran_tb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adress:"
        app:layout_constraintBottom_toBottomOf="@+id/adresa_restoran_tb"
        app:layout_constraintEnd_toStartOf="@+id/adresa_restoran_tb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/adresa_restoran_tb"
        app:layout_constraintVertical_bias="0.576" />

    <TextView
        android:id="@+id/driver_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant name:"
        app:layout_constraintBottom_toBottomOf="@+id/ime_restoran_tb"
        app:layout_constraintEnd_toStartOf="@+id/ime_restoran_tb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ime_restoran_tb"
        app:layout_constraintVertical_bias="0.576" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number:"
        app:layout_constraintBottom_toBottomOf="@+id/telefon_restoran_tb"
        app:layout_constraintEnd_toStartOf="@+id/telefon_restoran_tb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/telefon_restoran_tb"
        app:layout_constraintVertical_bias="0.346" />

    <Button
        android:id="@+id/driver_finish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Continue to Restaurant View"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/telefon_restoran_tb" />

</androidx.constraintlayout.widget.ConstraintLayout>
